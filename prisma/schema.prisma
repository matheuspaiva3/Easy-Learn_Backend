generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Seller {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  cpf       String     @unique
  phone     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Products  Products[]

  @@map("sellers")
}

model Products {
  id          Int      @id @default(autoincrement())
  title       String
  price       Int
  description String
  content     String
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  image       String
  sellerId    Int
  author      Seller   @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  File        File[]

  @@map("products")
}

model File {
  id        Int      @id @default(autoincrement())
  filename  String[]
  path      String[]
  productId Int      @unique
  product   Products @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("files")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique

  Products Products[]

  @@map("categories")
}
